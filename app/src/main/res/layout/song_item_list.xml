<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/singer_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/picture_singer" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/singer_image_view"
        android:layout_toRightOf="@+id/singer_image_view">

        <TextView
            android:id="@+id/song_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_content"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

</RelativeLayout>
